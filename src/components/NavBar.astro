---
import { Image } from "astro:assets";
import logo_v2 from "../assets/logo_v2.png";
import LinkComponent from "./LinkComponent.astro";
import ComponentLayout from "../layouts/ComponentLayout.astro";
---

<div
  class="lg:px-4 py-4 w-full fixed lg:w-[calc(100%-20px)] lg:top-[10px] left-1/2 transform -translate-x-1/2 z-50 backdrop-blur-md bg-background/70 shadow-md lg:rounded-lg"
>
  <ComponentLayout>
    <div class="grid lg:grid-cols-4 grid-flow-col-dense">
      <div class="flex items-center gap-3">
        {/* <Atropos shadow={false} class='relative'> */}
        <div class="w-auto h-11 rounded-md overflow-hidden">
          <a href="/">
            <Image src={logo_v2} alt="logo" class="h-full w-auto" />
          </a>
        </div>
        {/* </Atropos> */}
        {
          /* <h1 class="text-xl font-extrabold text-primary">Zepto Sign Customizer</h1> */
        }
      </div>
      {/* Nav menu with dropdown if needed and responsive */}
      <nav class="hidden lg:flex col-span-2 gap-8 justify-center">
        <LinkComponent class="navItem" href="/">Home</LinkComponent>
        <LinkComponent class="navItem" href="/#features">Features</LinkComponent
        >
        <LinkComponent class="navItem" href="/#pricing">Pricing</LinkComponent>
        <LinkComponent class="navItem" href="contact">Contact us</LinkComponent>
        {
          /* <div class="relative group">
                        <button class="text-base text-primary hover:underline flex items-center gap-1">
                            More
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" strokeWidth="2" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" d="M19 9l-7 7-7-7" /></svg>
                        </button>
                        <div class="absolute left-0 mt-2 w-32 bg-white rounded shadow-lg opacity-0 group-hover:opacity-100 transition-opacity z-10">
                            <a href="#faq" class="block px-4 py-2 text-primary hover:bg-gray-100">FAQ</a>
                            <a href="#contact" class="block px-4 py-2 text-primary hover:bg-gray-100">Contact</a>
                        </div>
                    </div> */
        }
      </nav>
      <div class="flex items-center justify-end gap-2">
        {/* Extra two buttons for Demo & Try for free */}

        <div class="flex gap-2 text-md">
          {
            /* <a href="#demo" class="px-4 py-2 rounded-full border border-primary text-text font-semibold hover:text-primary transition">Demo</a> */
          }
          <a
            href="https://apps.shopify.com/neon-sign-customizer"
            target="_blank"
            rel="noopener noreferrer"
            class="tryBtn !text-sm px-4 py-2 rounded-full font-semibold"
          >
            Try Now
          </a>
        </div>
        {/* Hamburger for mobile */}
        <div class="w-10 lg:hidden">
          <div class="w-6 h-6 mx-auto">
            <button
              class="text-primary focus:outline-none cursor-pointer"
              id="menuToggle"
              aria-label="Toggle menu"
              aria-expanded="false"
            >
              <div
                id="menuButtonIcon"
                class="transition-transform duration-300 ease-in-out"
              >
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
              </div>
              <!-- {
                isOpen ? (
                  <svg
                    class="w-6 h-6 transition-transform duration-300 ease-in-out transform rotate-180"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M6 18L18 6M6 6l12 12"
                    />
                  </svg>
                ) : (
                  <svg
                    class="w-6 h-6 transition-transform duration-300 ease-in-out"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M4 6h16M4 12h16M4 18h16"
                    />
                  </svg>
                )
              } -->
            </button>
          </div>
        </div>
      </div>
    </div>
    <nav
      id="mobileMenu"
      class="lg:hidden overflow-hidden ease-in-out transition-all duration-300 text-[0px] max-h-0 p-0 m-0"
    >
      <div
        class="flex flex-col items-center justify-evenly gap-10 overflow-x-auto pb-5"
      >
        <LinkComponent href="/">Home</LinkComponent>
        <LinkComponent href="/#features">Features</LinkComponent>
        <LinkComponent href="/#pricing">Pricing</LinkComponent>
        <LinkComponent href="/contact">Contact us</LinkComponent>
      </div>
    </nav>
  </ComponentLayout>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggleBtn = document.getElementById("menuToggle");
    const menu = document.getElementById("mobileMenu");
    let icon = document.getElementById("menuButtonIcon");

    let isOpen = false;
    toggleBtn?.addEventListener("click", () => {
      isOpen = !isOpen;
      menu?.classList.toggle("max-h-0", !isOpen);
      menu?.classList.toggle("text-[0px]", !isOpen);
      menu?.classList.toggle("p-0", !isOpen);
      menu?.classList.toggle("m-0", !isOpen);

      menu?.classList.toggle("pt-8", isOpen);
      menu?.classList.toggle("text-xl", isOpen);
      menu?.classList.toggle("max-h-[calc(100vh-90px)]", isOpen);

      icon.classList.toggle("rotate-180", isOpen);
      icon.innerHTML = isOpen
        ? `<svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path></svg>`
        : `<svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"></path></svg>`;
    });
  });
</script>
